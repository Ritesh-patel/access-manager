
    <h2 class="label label-primary text-center"><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f| %>
    <div class="form-group">
      <div class="input-group">
      <span class="input-group-addon glyphicon glyphicon-user"></span>
      <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Email" %>
      </div>
        </div>
        <div class="form-group">
          <div class="input-group">
              <%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: "btn btn-primary center-block" %>
            </div>
                </div>
            <% end %>
<%= render "devise/shared/links" %>
